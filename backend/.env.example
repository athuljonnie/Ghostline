# Application Settings
APP_NAME=AI Voice Assistant
APP_VERSION=1.0.0
DEBUG=False

# API Keys
GROQ_API_KEY=your_groq_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here  # Optional: Leave empty to use Whisper

# Database
DATABASE_URL=postgresql+asyncpg://aiuser:aipassword@db:5432/aiproject

# STT Configuration
STT_PROVIDER=deepgram  # Options: "deepgram" or "whisper"
DEEPGRAM_MODEL=nova-2  # Deepgram models: nova-2 (best), nova, base, enhanced
DEEPGRAM_LANGUAGE=en   # Language code for Deepgram

# Whisper (Fallback) Configuration
STT_MODEL=base         # Whisper model: tiny, base, small, medium, large
STT_DEVICE=cpu
STT_COMPUTE_TYPE=int8

# LLM Configuration
LLM_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512

# TTS Configuration
TTS_LANGUAGE=en
TTS_SLOW=False

# Session
MAX_CONVERSATION_HISTORY=20
SESSION_TIMEOUT=3600

# CORS (comma-separated)
CORS_ORIGINS=*
